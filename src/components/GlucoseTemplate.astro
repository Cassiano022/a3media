---
interface Props {
  data: {
    title: string;
    headline: string;
    subheadline: string;
    mainVideo: string;
    videoUrl: string;
    ctaHeadline: string;
    ctaButtonText: string;
    disclaimer: string;
  };
}

const { data } = Astro.props;
---

<div class="glucose-template">
  <header>
    <div class="header-container">
      <div class="logo">
        <img src="/glucose-logo.png" alt="Glucose Control Guide" />
      </div>
    </div>
  </header>

  <main>
    <section class="headline-section">
      <div class="container">
        <h1>{data.headline}</h1>
        <p class="subheadline">{data.subheadline}</p>
      </div>
    </section>

    <section class="video-section">
      <div class="container">
        <div class="video-container">
          {data.mainVideo ? (
            <div class="video-thumbnail">
              <img src={data.mainVideo} alt="Video thumbnail" />
              <div class="play-overlay">
                <svg width="80" height="80" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
                  <circle cx="12" cy="12" r="10" fill="white" fill-opacity="0.8"/>
                  <path d="M15.5 12L10 15.5V8.5L15.5 12Z" fill="#FF0000"/>
                </svg>
              </div>
            </div>
          ) : (
            <div class="video-placeholder">
              <p>Video Placeholder</p>
            </div>
          )}
        </div>
      </div>
    </section>

    <section class="cta-section">
      <div class="container">
        <h2>{data.ctaHeadline}</h2>
        <div class="cta-button-container">
          <a href="#" class="btn cta-button">{data.ctaButtonText}</a>
        </div>
      </div>
    </section>

    <section class="disclaimer-section">
      <div class="container">
        <p>{data.disclaimer}</p>
      </div>
    </section>
  </main>

  <footer>
    <div class="container">
      <p>Â© 2025 Glucose Control Guide. All Rights Reserved.</p>
    </div>
  </footer>
</div>

<style>
  .glucose-template {
    font-family: 'Inter', sans-serif;
    color: #333;
    line-height: 1.6;
    background-color: #f8f9fa;
  }

  /* Header Styles */
  header {
    background-color: #fff;
    padding: 15px 0;
    border-bottom: 1px solid #e9ecef;
  }

  .header-container {
    max-width: 1000px;
    margin: 0 auto;
    padding: 0 20px;
  }

  .logo img {
    height: 35px;
  }

  /* Headline Section */
  .headline-section {
    background-color: #1a56db;
    color: white;
    padding: 50px 0;
    text-align: center;
  }

  .headline-section .container {
    max-width: 900px;
    margin: 0 auto;
    padding: 0 20px;
  }

  .headline-section h1 {
    font-size: 2.6rem;
    font-weight: 800;
    margin-bottom: 20px;
    line-height: 1.2;
  }

  .subheadline {
    font-size: 1.3rem;
    font-weight: 400;
    max-width: 800px;
    margin: 0 auto;
  }

  /* Video Section */
  .video-section {
    padding: 50px 0;
    background-color: #fff;
  }

  .video-section .container {
    max-width: 900px;
    margin: 0 auto;
    padding: 0 20px;
  }

  .video-container {
    aspect-ratio: 16 / 9;
    width: 100%;
    max-width: 800px;
    margin: 0 auto;
    overflow: hidden;
    position: relative;
    border-radius: 8px;
    box-shadow: 0 10px 30px rgba(0, 0, 0, 0.15);
  }

  .video-thumbnail {
    position: relative;
    width: 100%;
    height: 100%;
    cursor: pointer;
  }

  .video-thumbnail img {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  .play-overlay {
    position: absolute;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%);
    z-index: 2;
  }

  .video-placeholder {
    width: 100%;
    height: 100%;
    background-color: #e9ecef;
    display: flex;
    justify-content: center;
    align-items: center;
    color: #6c757d;
    font-size: 1.5rem;
  }

  /* CTA Section */
  .cta-section {
    padding: 60px 0;
    background-color: #f8f9fa;
    text-align: center;
  }

  .cta-section .container {
    max-width: 700px;
    margin: 0 auto;
    padding: 0 20px;
  }

  .cta-section h2 {
    font-size: 2.2rem;
    margin-bottom: 30px;
    color: #1a56db;
  }

  .cta-button-container {
    margin-top: 30px;
  }

  .cta-button {
    font-size: 1.2rem;
    padding: 16px 40px;
    background-color: #28a745;
    border-radius: 4px;
    font-weight: 600;
    letter-spacing: 0.5px;
  }

  .cta-button:hover {
    background-color: #218838;
  }

  /* Disclaimer Section */
  .disclaimer-section {
    padding: 30px 0;
    background-color: #fff;
    border-top: 1px solid #e9ecef;
  }

  .disclaimer-section .container {
    max-width: 900px;
    margin: 0 auto;
    padding: 0 20px;
  }

  .disclaimer-section p {
    font-size: 0.9rem;
    color: #6c757d;
    text-align: center;
  }

  /* Footer */
  footer {
    background-color: #343a40;
    color: #f8f9fa;
    padding: 20px 0;
    text-align: center;
    font-size: 0.8rem;
  }

  /* Responsive Styles */
  @media (max-width: 768px) {
    .headline-section h1 {
      font-size: 2rem;
    }

    .subheadline {
      font-size: 1.1rem;
    }

    .cta-section h2 {
      font-size: 1.8rem;
    }
  }
</style>